{# app/Resources/views/Post/make.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}" />
{% endblock %}

{% block body %}
    {% form_theme form 'forms/fields.html.twig' %}
    <div class="container">
        {{ form_start(form, { 'attr': {'id': 'contact'} }) }}
        {{ form_row(form.nume, {'label': 'Nume'})  }}
        {{ form_row(form.categorie, { 'label': 'Categorie' }) }}
        {{ form_row(form.descriere) }}
        <button type="submit">Posteaza!</button>
        {{ form_end(form) }}
    </div>
{% endblock %}