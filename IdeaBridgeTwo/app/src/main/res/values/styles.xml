<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/idea_dark</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/IdeaBridgeRed</item>
        <item name="android:textColorPrimary">@color/IdeaBridgeRed</item>
        <item name="android:colorBackground">@color/idea_darkblue</item>
        <item name="android:textColorSecondary">@color/IdeaBridgeRed</item>
        <item name="android:colorForeground">@color/IdeaBridgeRed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IdeaBridgeTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

</resources>
